rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Người dùng có thể đọc/ghi dữ liệu của chính mình
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Cho phép đọc người dùng khác để tìm kiếm
    }

    // Bộ sưu tập tin nhắn (thống nhất cho phòng + tin nhắn trực tiếp)
    // Bảo mật được duy trì thông qua Xác thực Firebase và mã hóa ở mức ứng dụng
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // Quản lý phòng
    match /rooms/{roomId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid in resource.data.members ||
         request.auth.uid in request.resource.data.members);
    }

    // Cuộc trò chuyện
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid in resource.data.participants ||
         request.auth.uid in request.resource.data.participants);
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.participants;
    }

    // Hệ thống bạn bè
    match /friends/{friendId} {
      allow read, write: if request.auth != null;
    }

    match /friend_requests/{requestId} {
      allow read, write: if request.auth != null;
    }

    // Người dùng bị chặn
    match /blocked_users/{blockId} {
      allow read, write: if request.auth != null;
    }

    // Bình chọn
    match /votes/{voteId} {
      allow read, write: if request.auth != null;
    }

    // Chat đã lưu trữ
    match /archived_chats/{archiveId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Cho phép đọc tài liệu không tồn tại nếu người dùng sở hữu ID tài liệu
      allow read: if request.auth != null && archiveId.matches(request.auth.uid + '_.*');
    }
  }
}
